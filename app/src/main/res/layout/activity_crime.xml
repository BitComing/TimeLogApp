        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="40dp">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textSize="30dp"/>
                <EditText
                    android:id="@+id/edit_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="开始时间"
                    android:fontFamily="serif"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="完成时间"
                    android:textSize="30dp"/>
                <EditText
                    android:id="@+id/edit_now_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="完成时间"
                    android:fontFamily="serif"
                    android:textSize="30dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="这段时间做了什么？"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/crime_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="这段时间做了什么？"
            android:textSize="20dp"/>
        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="持续时长（min）"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edit_duration"
            android:maxLength="4"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="持续时长（min）"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_time_btn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <Button
            android:id="@+id/btn_add_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_drawable"
            android:text="15min"/>
        <Button
            android:id="@+id/btn_add_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_drawable"
            android:text="30min"/>
        <Button
            android:id="@+id/btn_add_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_drawable"
            android:text="60min"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:backgroundTint="#4DA0E8"
            android:text="删除" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4DA0E8"
            android:text="确认"/>
    </LinearLayout>


    <CheckBox
        android:id="@+id/crime_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crime_solved_label"/>
